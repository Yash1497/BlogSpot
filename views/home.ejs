<% include ./partials/header %>
<div id="homeContainer" class="ui main text container">
  <div id="homeHeader" class="ui huge header ">Blogs</div>
  <p>
     <form action="/blogs" method="GET" class="form-inline">
      <div class="form-group">
        <input class="form-control" type="text" placeholder="search.."  name="search">
        <input class="btn btn-default" type="submit">
      </div>
      </form>
  </p>
  <div id="segment" class="ui top attached segment">
    <div class="ui divided items">
      <div class="col-lg-12">
    <% if( noMatch !== null){%>
    <h3><%= noMatch %></h3>
    <%}%>
      </div>
      <% blogs.forEach(function(blog){ %>
       <div class="item">
         <div class="image">
          <img src="<%= blog.image %>">
         </div>
         <div class="content">
           <a class="header" href="/blogs/<%= blog._id %>"><p><%= blog.title %></p></a>
           <div class="meta">
            <h5><%= blog.created.toDateString() %></h5>
             <em>created by:-</em><strong><%= blog.author.username %></strong>
           </div>
           <div class="description">
              <p><%= blog.body.substring(0,150)%>..</p>
           </div>
           <div class="extras">
               <a class="ui inverted blue button "href="/blogs/<%= blog._id %>">Read More<i class="right chevron icon"></i></a>
           </div>
         </div>
        </div>
          <% }); %>
       </div>
  </div>
</div>

<style>
  body{
    font-family: 'Roboto', sans-serif;
  }
 
 #homeHeader{
    color:red;
    text-align:center;
    
  }
  
  
  p{
    color:blue;
  }
  
  
</style>



