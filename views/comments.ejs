<% include partials/header %>

<div id="newContainer" class="ui main text container segment">
  <div id="newHeader" class="ui huge header "><strong>Add  new comment to <%= blog.title %> blog</strong> </div>
       <form id="newForm" class="ui form" action="/blogs/<%= blog._id %>/comments" method="POST">
      <div class="filled">
        <input  type="text" placeholder="text" name="comment[text]">
      </div>
         <br>
      <input class="ui inverted green button big" type="submit">
      <a id="back" class="ui inverted red button big" href="/blogs">GO BACK</a>
    </form>
      </div>

